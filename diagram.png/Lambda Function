import boto3
from PIL import Image
import io

s3 = boto3.client('s3')

def lambda_handler(event, context):
    source_bucket = 'original-images'
    target_bucket = 'processed-images'
    
    for record in event['Records']:
        key = record['s3']['object']['key']
        
        # تحميل الصورة من S3
        response = s3.get_object(Bucket=source_bucket, Key=key)
        image_content = response['Body'].read()
        
        # فتح الصورة وتغيير حجمها
        img = Image.open(io.BytesIO(image_content))
        img = img.resize((200, 200))  # مثال: تغيير الحجم 200x200
        
        # حفظ الصورة في ذاكرة مؤقتة
        buffer = io.BytesIO()
        img.save(buffer, 'JPEG')
        buffer.seek(0)
        
        # رفع الصورة بعد المعالجة
        s3.put_object(Bucket=target_bucket, Key=key, Body=buffer, ContentType='image/jpeg')
        
    return {
        'statusCode': 200,
        'body': 'Image processed successfully!'
    }
